{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "ESNext",
		"strict": true,
		"module": "commonjs",
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
    "allowSyntheticDefaultImports": true
	},
	"include": [
		"src/*",
	],
	"exclude": [
		"node_modules"
	]
}